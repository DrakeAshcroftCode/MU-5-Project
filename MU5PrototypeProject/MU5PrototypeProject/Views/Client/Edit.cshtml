@model MU5PrototypeProject.Models.Client

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h2>Client</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="pageForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientFolderUrl" class="control-label"></label>
                <input asp-for="ClientFolderUrl" class="form-control" />
                <span asp-validation-for="ClientFolderUrl" class="text-danger"></span>
            </div>
          @*
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsArchived" /> @Html.DisplayNameFor(model => model.IsArchived)
                </label>
            </div>
            *@
            <div class="form-group">
                <input type="hidden" id="confirmation" name="confirmation" value="confirm" />
				<input id="btnconfirm" type="submit" onclick="ShowModal()" value="Save" class="btn btn-primary" />
				<a asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
            
        </form>
    </div>
</div>

<div class="modal fade" id="mymodal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <h1 class="modal-title"> Confirm that values are correct </h1>
            <div class="modal-body">

                <input id="ModalFirstName" class="form-control" disabled />
                <input id="ModalLastName" class="form-control" disabled />
                <input id="ModalDOB" class="form-control" type="date" disabled />
                <input id="ModalPhone" class="form-control" disabled />
                <input id="ModalEmail" class="form-control" disabled />
                <input id="ModalClientFolderUrl" class="form-control" disabled />

            </div>
            <div class="modal-body">

                <input id="btnsubmit" type="submit" form="pageForm" value="Submit" class="btn btn-primary" />
                <input type="button" value="Cancel" class="btn btn-danger" data-bs-dismiss="modal">

            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        Back to Clients
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript" language="javascript">

        function ShowModal() {

            var form = document.forms.namedItem("pageForm");

            form.btnconfirm.onclick =_=> form.confirmation.value = 'confirm';
            form.btnsubmit.onclick =_=> form.confirmation.value = 'submit'

            form.onsubmit = ev => {
                if(form.confirmation.value == "confirm"){
                    ev.preventDefault();

                    var isValid = form.checkValidity();
                    if(isValid){

                        document.getElementById("ModalFirstName").value = document.getElementById("FirstName").value;
                        document.getElementById("ModalLastName").value = document.getElementById("LastName").value;
                        document.getElementById("ModalDOB").value = document.getElementById("DOB").value;
                        document.getElementById("ModalPhone").value = document.getElementById("Phone").value;
                        document.getElementById("ModalEmail").value = document.getElementById("Email").value;
                        document.getElementById("ModalClientFolderUrl").value = document.getElementById("ClientFolderUrl").value;

                        var myModal = new bootstrap.Modal(document.getElementById('mymodal'));
                        myModal.show();
                    }
                }
            }
        }

    </script>
}
