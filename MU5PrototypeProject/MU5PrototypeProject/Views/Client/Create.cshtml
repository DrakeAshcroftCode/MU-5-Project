@model MU5PrototypeProject.Models.Client

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h2>Client</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label><span style="color:darkred"> *</span>
                <input asp-for="FirstName" class="form-control" placeholder="First Name"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label><span style="color:darkred"> *</span>
                <input asp-for="LastName" class="form-control" placeholder="Last Name"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" type="date" class="form-control" value="@ViewData["DefaultDOB"]" max="@ViewData["MaxDOB"]" min="@ViewData["MinDOB"]" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label><span style="color:darkred"> *</span>
                <input asp-for="Phone" class="form-control" placeholder="Phone Number"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label><span style="color:darkred"> *</span>
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientFolderUrl" class="control-label"></label>
                <input asp-for="ClientFolderUrl" class="form-control" placeholder="Client Folder URL"/>
                <span asp-validation-for="ClientFolderUrl" class="text-danger"></span>
            </div>
           @*
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsArchived" /> @Html.DisplayNameFor(model => model.IsArchived)
                </label>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
           
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Clients</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
