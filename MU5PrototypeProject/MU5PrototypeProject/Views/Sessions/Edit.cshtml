@{
    ViewData["Title"] = "Session - Add/Edit";
}

<div class="page">
    <h1 class="pageTitle">Session (Add / Edit)</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="text-muted">+ Client</div> <!-- placeholder until we hook a dropdown -->
        <a class="secondaryButton" asp-controller="Sessions" asp-action="Index">cancel</a>
    </div>

    <div class="clientGrid">
        <div class="panel">
            <div class="panelTitle mb-3">Teacher Notes</div> <!-- left column from wireframe -->
            <div class="formGrid">
                <div class="formLabel">Teacher:</div>
                <input class="formInput" type="text" />

                <div class="formLabel">Date:</div>
                <input class="formInput" type="date" />

                <div class="formLabel">Goals:</div>
                <input class="formInput" type="text" />

                <div class="formLabel">General Comments:</div>
                <textarea class="formInput" rows="2"></textarea>

                <div class="formLabel">Subjective Reports:</div>
                <textarea class="formInput" rows="3"></textarea>

                <div class="formLabel">Objective Findings:</div>
                <textarea class="formInput" rows="2"></textarea>

                <div class="formLabel">Plan:</div>
                <textarea class="formInput" rows="2"></textarea>
            </div>
        </div>

        <div class="panel">
            <div class="panelTitle mb-3">Exercises</div> <!-- right column -->
            <div class="formGrid">
                <div class="formLabel">Apparatus:</div>
                <input class="formInput" type="text" />
                <div class="formLabel">Props:</div>
                <input class="formInput" type="text" />
                <div class="formLabel">Exercises:</div>
                <input class="formInput" type="text" />
                <div class="formLabel">Springs:</div>
                <input class="formInput" type="text" />
                <div class="formLabel">Notes/Comments:</div>
                <textarea class="formInput" rows="2"></textarea>
            </div>

            <div class="panelTitle mb-2 mt-3">Next Steps</div>
            <div class="formGrid">
                <div class="formLabel">Need Approval/Referral:</div>
                <input class="form-check-input mt-1" type="checkbox" />

                <div class="formLabel">Consulted Person:</div>
                <input class="formInput" type="text" />

                <div class="formLabel">Referral By:</div>
                <input class="formInput" type="text" />

                <div class="formLabel">Sessions/Week Recommended:</div>
                <input class="formInput" type="text" />
            </div>
        </div>
    </div>

    <div class="panel mt-3">
        <div class="panelTitle mb-3">Equipment</div>
        <div class="formGrid">
            <div class="formLabel">Gloves/Bar:</div>
            <input class="form-check-input mt-1" type="checkbox" />
            <div class="formLabel">Straps/Striding:</div>
            <input class="form-check-input mt-1" type="checkbox" />
            <div class="formLabel">Head Pad:</div>
            <input class="form-check-input mt-1" type="checkbox" />
            <div class="formLabel">Stops:</div>
            <input class="form-check-input mt-1" type="checkbox" />
            <div class="formLabel">Towel:</div>
            <input class="form-check-input mt-1" type="checkbox" />
            <div class="formLabel">Foam/Blocks:</div>
            <input class="form-check-input mt-1" type="checkbox" />
        </div>
    </div>

    <div class="buttonRow mt-3">
        <a class="secondaryButton" asp-controller="Sessions" asp-action="Index">Cancel</a>
        <button class="primaryButton" type="button" onclick="alert('Save later');">Save/Create</button>
    </div>
</div>
