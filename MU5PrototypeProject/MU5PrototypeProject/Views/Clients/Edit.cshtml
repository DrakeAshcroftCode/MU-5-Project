@{
}
@{
    ViewData["Title"] = "Client - Add/Edit";
}

<div class="page">
    <h1 class="pageTitle">Client (Add / Edit)</h1>

    <div class="clientForm">
        <!-- left: photo + core fields -->
        <div class="clientLeft">

            <div class="photoBox">
                <div class="photoCircle">👤</div>
            </div>

            <form method="post" enctype="multipart/form-data" class="formBox">
                <!-- Name -->
                <div class="formRow">
                    <label class="formLabel">First Name:</label>
                    <input class="formInput" type="text" name="FirstName" />
                </div>

                <div class="formRow">
                    <label class="formLabel">Last Name:</label>
                    <input class="formInput" type="text" name="LastName" />
                </div>

                <!-- DOB -->
                <div class="formRow">
                    <label class="formLabel">Date of Birth:</label>
                    <input class="formInput" type="date" name="DateOfBirth" />
                </div>

                <!-- Address -->
                <div class="formRow">
                    <label class="formLabel">Address:</label>
                    <input class="formInput" type="text" name="Address" />
                </div>

                <!-- Client type -->
                <div class="formRow">
                    <label class="formLabel">Type of Client:</label>
                    <select class="formInput" name="ClientType">
                        <option value="">Select type...</option>
                        <option value="Private">Private Client</option>
                        <option value="Group">Group</option>
                        <option value="Corporate">Corporate</option>
                    </select>
                </div>

                <!-- Buttons -->
                <div class="formButtons">
                    <button type="submit" class="primaryButton">Save</button>
                    <a class="secondaryButton" asp-controller="Clients" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>

        <!-- Right: medical history + uploads -->
        <div class="clientRight">
            <div class="sideBox">
                <div class="sideTitle">Medical History</div>

                <textarea class="medicalInput" name="MedicalHistory" rows="6"
                          placeholder="Enter notes..."></textarea>

                <div class="uploadRow">
                    <label class="uploadLabel">Upload documents:</label>
                    <input type="file" name="MedicalDocuments" multiple />
                </div>
            </div>
        </div>
    </div>
</div>