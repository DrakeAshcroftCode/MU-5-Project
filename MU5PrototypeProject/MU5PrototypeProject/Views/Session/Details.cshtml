@model MU5PrototypeProject.Models.Session

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h2>Session</h2>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SessionDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SessionDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SessionsPerWeekRecommended)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SessionsPerWeekRecommended)
        </dd>
@*         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsArchived)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsArchived)
        </dd> *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trainer.TrainerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.FullName)
        </dd>
    </dl>
</div>
<div>
    @if (Model != null && !Model.IsArchived)
    {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
        <text> | </text>

        <form asp-action="Archive" asp-route-id="@Model.ID" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-link p-0 align-baseline">Archive</button>
        </form>
        <text> | </text>
    }
    else if (Model != null && Model.IsArchived)
    {
        <form asp-action="Unarchive" asp-route-id="@Model.ID" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-link p-0 align-baseline">Unarchive</button>
        </form>
        <text> | </text>
    }

    <a asp-action="Index">Back to Sessions</a>
</div>

<div class="modal fade" id="mymodal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <p>Success Message!</p>
        </div>
    </div>
</div>
<script type="text/javascript" language="javascript">
    var Post = 'ViewBag.Post'
    document.addEventListener('DOMContentLoaded', function() {
        console.log("Event Fired" + Post)
        if(Post){
            var myModal = new bootstrap.Modal(document.getElementById('mymodal'));
            myModal.show();
        }
    }, false);
</script>