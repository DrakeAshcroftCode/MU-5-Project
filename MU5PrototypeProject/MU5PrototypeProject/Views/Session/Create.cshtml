@model MU5PrototypeProject.Models.Session

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h2>Session</h2>
<hr />

<input id="BtnFill" onclick="FillCreate()" type="button" value="Fill Fields" class="btn btn-primary" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="pageForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SessionDate" class="control-label"></label><span style="color:darkred"> *</span>
                <input asp-for="SessionDate" class="form-control" type="date" value="@ViewData["DefaultSessionDate"]" /> @* default session date to today *@
                <span asp-validation-for="SessionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SessionsPerWeekRecommended" class="control-label"></label>
                <input asp-for="SessionsPerWeekRecommended" class="form-control" placeholder="Recommended Sessions Per Week"/>
                <span asp-validation-for="SessionsPerWeekRecommended" class="text-danger"></span>
            </div>
@*             <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsArchived" /> @Html.DisplayNameFor(model => model.IsArchived)
                </label>
            </div> *@
            <div class="form-group">
                <label asp-for="TrainerID" class="control-label"></label><span style="color:darkred"> *</span>
                <select asp-for="TrainerID" class ="form-control" asp-items="ViewBag.TrainerID" >
                    <option value="">Select a Trainer</option>
                </select>
                <span asp-validation-for="TrainerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientID" class="control-label"></label><span style="color:darkred"> *</span>
                <select asp-for="ClientID" class ="form-control" asp-items="ViewBag.ClientID">
                    <option value="">Select a Client</option>
                </select>
                <span asp-validation-for="ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" id="confirmation" name="confirmation" value="confirm" />
                <input id="btnconfirm" onclick="ShowModal()" type="submit" value="Create" class="btn btn-primary" />
            </div>

            <div class="modal fade" id="mymodal" role="dialog">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">

                        <h1 class="modal-title"> Confirm that values are correct </h1>
                        <div class="modal-body">

                            <input id="ModalSessionDate" class="form-control" type="date" disabled />
                            <input id="ModalSessions" class="form-control" disabled />
                            <select id="ModalTrainer" class="form-control" asp-items="ViewBag.TrainerID" disabled></select>
                            <select id="ModalClient" class="form-control" asp-items="ViewBag.ClientID" disabled></select>

                        </div>
                        <div class="modal-body">

                            <input type="submit" id="btnsubmit" value="Submit" class="btn btn-primary" />
                            <input type="button" value="Cancel" class="btn btn-danger" data-bs-dismiss="modal">

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Sessions</a>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!--
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    -->
    <script type="text/javascript" language="javascript">


        const SessionDate = document.getElementById("SessionDate");
        const SessionsPerWeek = document.getElementById("SessionsPerWeekRecommended");
        const TrainerID = document.getElementById("TrainerID");
        const ClientID = document.getElementById("ClientID");

        function FillCreate(){

            SessionDate.value = "2026-03-16";
            SessionsPerWeek.value = "3";
            TrainerID.value = 2;
            ClientID.value = 12;

        };

        function ShowModal() {

            var form = document.forms.namedItem("pageForm");

            form.btnconfirm.onclick =_=> form.confirmation.value = 'confirm';
            form.btnsubmit.onclick =_=> form.confirmation.value = 'submit'

            form.onsubmit = ev => {
                if(form.confirmation.value == "confirm"){
                    ev.preventDefault();

                    document.getElementById("ModalSessionDate").value = document.getElementById("SessionDate").value;
                    document.getElementById("ModalSessions").value = document.getElementById("SessionsPerWeekRecommended").value;
                    document.getElementById("ModalTrainer").value = document.getElementById("TrainerID").value;
                    document.getElementById("ModalClient").value = document.getElementById("ClientID").value;
                }
            }
            
            var myModal = new bootstrap.Modal(document.getElementById('mymodal'));
            myModal.show();
        }

    </script>
}
