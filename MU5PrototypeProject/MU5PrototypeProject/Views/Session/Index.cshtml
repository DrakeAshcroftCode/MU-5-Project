@model IEnumerable<MU5PrototypeProject.Models.Session>

@{
    ViewData["Title"] = "Index";
}

<h1 class="pageTitle">Sessions</h1>

<p>
    <a class="primaryButton" asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <div class="form-horizontal">
        <button class="btn @ViewData["Filtering"]" type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
            Filter/Search @ViewData["numberFilters"]
        </button><br />
        <div class="collapse @ViewData["ShowFilter"]" id="collapseFilter">
            <div class="card card-body bg-light">
                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="control-label">Select by Client:</label>
                        @Html.DropDownList("ClientID", null, "All Clients", htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Select by Trainer:</label>
                        @Html.DropDownList("TrainerID", null, "All Trainers", htmlAttributes: new { @class = "form-control" })
                    </div>
                    @* 
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                                <label class="control-label">Search Session Date:</label>
                                @Html.TextBox("SearchSessionDate", null, new { @class = "form-control" })
							</div> *@
                    <div class="form-group col-md-4">
                        <div class="form-check mt-4">
                            <input type="checkbox"
                                   class="form-check-input"
                                   id="showArchived"
                                   name="showArchived"
                                   value="true"
                                   @( (bool?)ViewData["showArchived"] == true ? "checked" : "") />
                            <label class="form-check-label" for="showArchived">
                                Show archived sessions
                            </label>
                        </div>
                    </div>
                    <div class="form-group col-md-4 align-self-end">
                        <input type="submit" name="actionButton" value="Apply" class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="dataBox">
    </form>


    <table class="table dataTable sessionsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SessionDate)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.SessionsPerWeekRecommended)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.IsArchived)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Trainer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
                <th class="actionsCol">Actions</th>
            </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SessionDate)
            </td>
           <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.SessionsPerWeekRecommended)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.IsArchived)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.TrainerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.ClientName)
            </td>
            <td class="actionsCol">
                @if (item.IsArchived)
                {
                    <span class="actionLink disabledAction" aria-disabled="true">Edit</span>
                }
                else
                {
                    <a class="actionLink" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                }
                <span aria-hidden="true"> | </span>
                <a class="actionLink" asp-action="Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
