<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MU5PrototypeProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MU5PrototypeProject.styles.css" asp-append-version="true" />
</head>
<body>
    <a href="#maincontent" class="skip-link">Skip to main content</a>
    <header class="siteHeader">
        <div class="container">
            <div class="headerBar">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="logoBox text-decoration-none d-inline-block">
                    <!-- logo drops you back to landing -->
                    <img src="~/assets/Movement_Unlimited_O_Logo_500px.png" id="imgLogo" alt="Movement Unlimited logo" />
                </a>

                <nav class="navbar navbar-expand-md p-0 classicNav">
                    <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                            aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav flex-row classicNavMenu">
                            <li class="nav-item">
                                <a class="nav-link classicNavLink" asp-controller="Home" asp-action="Index">Landing</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link classicNavLink" asp-controller="Client" asp-action="Index">Clients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link classicNavLink" asp-controller="Session" asp-action="Index">Sessions</a>
                            </li>
                        </ul>
                    </div>
                </nav>

                <!-- quick help slideout -->
                <button class="helpButton" type="button" data-bs-toggle="offcanvas" data-bs-target="#helpPanel" aria-controls="helpPanel">?</button>
            </div>
        </div>
    </header>
    <div class="container pageContent">
        <main role="main" class="pb-3" id="maincontent" tabindex="-1">
            @RenderBody()
        </main>
    </div>

    <footer class="siteFooter mt-auto py-3">
        <div class="container text-center">
            <div>SUM Solutions 2026</div>
        </div>
    </footer>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="helpPanel" aria-labelledby="helpPanelLabel">
        <div class="offcanvas-header">
            <h1 id="helpPanelLabel">Help</h1>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <p>Landing: Home page of the app</p>
            <p>Sessions: view/add/edit/archive session records.</p>
            <p>Clients: view/add/edit/archive client records.</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
